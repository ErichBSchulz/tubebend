{
  "name": "Tracheal Intubation Geometry Simulator",
  "version": "0.0.1",
  "description": "A simple graphical tool for teachers and students of tracheal intubation.",
  "main": "index.js",
  "scripts": {
    "start": "http-server -p 8000",
    "watch": "browser-sync start --proxy 'localhost:8000' --files '**/*.html, **/*.js, **/*.css'",
    "dev": "concurrently \"npm run start\" \"npm run watch\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "tracheal intubation",
    "medical education"
  ],
  "author": "Dr Erich B Schulz",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^1.3.7",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1"
  }
}
